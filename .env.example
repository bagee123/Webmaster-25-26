# Environment Variables for Coppell Community Hub
# Copy this file to .env and fill in your values

# ===========================
# FIREBASE CONFIGURATION
# ===========================
# Firebase API Key - Get from Firebase Console > Project Settings > Web API Key
VITE_FIREBASE_API_KEY=your_firebase_api_key_here

# Firebase Auth Domain - Get from Firebase Console > Project Settings
VITE_FIREBASE_AUTH_DOMAIN=your-project.firebaseapp.com

# Firebase Project ID - Get from Firebase Console > Project Settings
VITE_FIREBASE_PROJECT_ID=your-project-id

# Firebase Storage Bucket - Get from Firebase Console > Project Settings
VITE_FIREBASE_STORAGE_BUCKET=your-project.appspot.com

# Firebase Messaging Sender ID - Get from Firebase Console > Project Settings
VITE_FIREBASE_MESSAGING_SENDER_ID=your_messaging_sender_id

# Firebase App ID - Get from Firebase Console > Project Settings
VITE_FIREBASE_APP_ID=your_app_id

# ===========================
# DEPLOYMENT CONFIGURATION
# ===========================
# Environment type: development, staging, or production
VITE_ENV=development

# API Base URL - Update for different environments
VITE_API_BASE_URL=http://localhost:5173

# Enable debug mode (true/false)
VITE_DEBUG=false

# ===========================
# OPTIONAL: ANALYTICS
# ===========================
# Google Analytics Measurement ID (optional)
# VITE_GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX

# ===========================
# OPTIONAL: THIRD-PARTY SERVICES
# ===========================
# Sentry for error tracking (optional)
# VITE_SENTRY_DSN=https://example@sentry.io/123456

# Algolia for advanced search (optional, if implementing in future)
# VITE_ALGOLIA_APP_ID=XXXXXXXXXX
# VITE_ALGOLIA_SEARCH_KEY=xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

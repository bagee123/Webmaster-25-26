rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Helper function to check if user owns the document
    function isOwner(userId) {
      return request.auth.uid == userId;
    }
    
    // Users collection - only authenticated users can read/write their own data
    match /users/{userId} {
      allow read, write: if isAuthenticated() && isOwner(userId);
      
      // Allow creation of user document on signup
      allow create: if isAuthenticated() && isOwner(userId);
    }
    
    // Resources collection - anyone can read, only authenticated users can create
    match /resources/{resourceId} {
      allow read: if true;
      allow create: if isAuthenticated() && 
                       request.resource.data.firstName is string &&
                       request.resource.data.lastName is string &&
                       request.resource.data.resourceName is string &&
                       request.resource.data.website is string &&
                       request.resource.data.category is string &&
                       request.resource.data.description is string &&
                       request.resource.data.timestamp is timestamp &&
                       request.resource.data.firstName.size() > 0 &&
                       request.resource.data.firstName.size() < 100 &&
                       request.resource.data.lastName.size() > 0 &&
                       request.resource.data.lastName.size() < 100 &&
                       request.resource.data.resourceName.size() < 200 &&
                       request.resource.data.description.size() >= 10 &&
                       request.resource.data.description.size() <= 5000;
      allow update, delete: if false; // Prevent modification/deletion
    }
    
    // Blog posts collection - anyone can read, only authenticated users can create
    match /blogPosts/{postId} {
      allow read: if true;
      allow create: if isAuthenticated() && 
                       request.resource.data.title is string &&
                       request.resource.data.content is string &&
                       request.resource.data.author is string &&
                       request.resource.data.category is string &&
                       request.resource.data.timestamp is timestamp &&
                       request.resource.data.title.size() > 0 &&
                       request.resource.data.title.size() <= 300 &&
                       request.resource.data.content.size() > 10 &&
                       request.resource.data.content.size() <= 50000;
      allow update: if isAuthenticated() && 
                       resource.data.uid == request.auth.uid &&
                       request.resource.data.title == resource.data.title &&
                       request.resource.data.content == resource.data.content; // Only allow like/comment updates
      allow delete: if isAuthenticated() && resource.data.uid == request.auth.uid;
    }
    
    // Forum topics collection - anyone can read, only authenticated users can create
    match /forumTopics/{topicId} {
      allow read: if true;
      allow create: if isAuthenticated() &&
                       request.resource.data.title is string &&
                       request.resource.data.content is string &&
                       request.resource.data.category is string &&
                       request.resource.data.timestamp is timestamp &&
                       request.resource.data.title.size() > 0 &&
                       request.resource.data.title.size() <= 300 &&
                       request.resource.data.content.size() >= 10 &&
                       request.resource.data.content.size() <= 10000;
      allow update: if isAuthenticated() && resource.data.uid == request.auth.uid;
      allow delete: if isAuthenticated() && resource.data.uid == request.auth.uid;
      
      // Replies subcollection
      match /replies/{replyId} {
        allow read: if true;
        allow create: if isAuthenticated() &&
                         request.resource.data.content is string &&
                         request.resource.data.timestamp is timestamp &&
                         request.resource.data.content.size() >= 1 &&
                         request.resource.data.content.size() <= 5000;
        allow update, delete: if isAuthenticated() && resource.data.uid == request.auth.uid;
      }
    }
    
    // Comments subcollection on blog posts
    match /blogPosts/{postId}/comments/{commentId} {
      allow read: if true;
      allow create: if isAuthenticated() &&
                       request.resource.data.content is string &&
                       request.resource.data.timestamp is timestamp &&
                       request.resource.data.content.size() > 0 &&
                       request.resource.data.content.size() <= 2000;
      allow delete: if isAuthenticated() && resource.data.uid == request.auth.uid;
    }
    
    // Deny access to everything else by default
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
